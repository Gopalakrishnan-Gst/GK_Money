<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="@color/lavendar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.DayNight.ActionBar"
        app:layout_constraintTop_toTopOf="parent"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp"

        android:weightSum="3"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="64dp"
        tools:ignore="MissingConstraints">

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/welcomeNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Welcome!"
            android:layout_marginRight="5sp"
            android:textSize="25sp"
            android:textStyle="bold"/>
        <!-- Button 1 -->
        <Button
            android:id="@+id/currentMonthNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5sp"
            android:text="Current Month" />

        <Button
            android:id="@+id/allNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="All" />
         </LinearLayout>





    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/cardview_light_background"
        android:padding="16dp">

        <!-- Row 1: Labels with Icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <!-- Credit Label -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/credit_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Credit"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Debit Label -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/debit_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Debit"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Investment Label -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/investment_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Investment"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Row 2: Amounts -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/creditAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="$1000"
                android:gravity="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/debitAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="$500"
                android:gravity="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/investmentAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="$700"
                android:gravity="center"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Row 3: Available Balance -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/available_balance_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Available Balance: "
                android:textSize="16sp" />
            <TextView
                android:id="@+id/AvailableBalanceAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/filterBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
         android:layout_margin="16dp"
        android:weightSum="4">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/AllNoteDtls"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10sp"
            android:text="All" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/CreditNoteDtls"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:text=""
            app:iconGravity="textStart"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            app:icon="@drawable/credit_icon"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/DebitNoteDtls"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text=""
            app:iconGravity="textStart"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            app:icon="@drawable/debit_icon" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/InvestmentNoteDtls"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text=""
            app:iconGravity="textStart"
            android:gravity="center"
            android:layout_height="wrap_content"
            app:icon="@drawable/investment_icon" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerExpenses"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:contentDescription="@string/AddNote"
        android:src="@drawable/baseline_note_add_24"
        app:fabSize="normal"
        android:layout_marginBottom="25sp"
        android:backgroundTint="@color/lavendar"
        android:background="@color/lavendar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
         />
    </FrameLayout>

</LinearLayout>