<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/VeryLightGrey"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        app:titleTextColor="@color/white"
        android:background="@color/lavendar"
        app:layout_constraintTop_toTopOf="parent"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp"

        android:weightSum="3"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="64dp"
        tools:ignore="MissingConstraints">

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/welcomeNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Welcome!"
            android:textColor="#212121"
            android:layout_marginRight="5sp"
            android:textSize="25sp"
            android:textStyle="bold"/>
        <!-- Button 1 -->

        <Button
            android:id="@+id/currentMonthNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_marginRight="10sp"
            android:text="Current Month" />

        <Button
            android:id="@+id/allNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_marginRight="10sp"
            android:text="All" />

        </LinearLayout>





    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:elevation="4dp"
        android:background="@drawable/rounded_mini_layout">

        <!-- Row 1: Labels with Icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <!-- Credit Label -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/credit_icon"
                    app:tint="#388E3C" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Credit"
                    android:textColor="#388E3C"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Debit Label -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:tint="#D32F2F"
                    android:src="@drawable/debit_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Debit"
                    android:textColor="#D32F2F"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Investment Label -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:tint="#F9A825"
                    android:src="@drawable/investment_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Investment"
                    android:textColor="#F9A825"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Row 2: Amounts -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/creditAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="$1000"
                android:textColor="#388E3C"
                android:gravity="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/debitAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="$500"
                android:textColor="#D32F2F"
                android:gravity="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/investmentAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="$700"
                android:textColor="#F9A825"
                android:gravity="center"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Row 3: Available Balance -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:tint="#1E88E5"
                android:src="@drawable/available_balance_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Available Balance: "
                android:textColor="#1E88E5"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Row 4: Available Balance Amount-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/AvailableBalanceAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textColor="#1E88E5"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/filterBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
         android:layout_margin="16dp"
        android:weightSum="4">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/AllNoteDtls"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10sp"
            android:text="All" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/CreditNoteDtls"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:text=""
            app:iconTint="#388E3C"
            app:iconGravity="textStart"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            app:icon="@drawable/credit_icon"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/DebitNoteDtls"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text=""
            app:iconTint="#D32F2F"
            app:iconGravity="textStart"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            app:icon="@drawable/debit_icon" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/InvestmentNoteDtls"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text=""
            app:iconTint="#F9A825"
            app:iconGravity="textStart"
            android:gravity="center"
            android:layout_height="wrap_content"
            app:icon="@drawable/investment_icon" />
    </com.google.android.material.button.MaterialButtonToggleGroup>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerExpenses"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="8dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/emptyView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No notes found!"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="24dp"
            android:visibility="gone"
            android:textColor="@android:color/holo_red_dark"
            android:drawableTop="@android:drawable/ic_dialog_alert"
            android:drawablePadding="12dp"/>
    </LinearLayout>

    </LinearLayout>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="20dp"
            android:contentDescription="@string/AddNote"
            android:src="@drawable/baseline_note_add_24"
            app:fabSize="normal"
            android:backgroundTint="@color/PrimaryBlue"
            app:tint="@color/white" />







</androidx.coordinatorlayout.widget.CoordinatorLayout>